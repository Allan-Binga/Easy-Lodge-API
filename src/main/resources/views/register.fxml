<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotel_management.client.controllers.RegisterController">

    <!-- Centering VBox inside AnchorPane -->
    <VBox alignment="CENTER" spacing="15.0"
          prefWidth="350.0"
          AnchorPane.topAnchor="150.0"
          AnchorPane.leftAnchor="125.0"
          AnchorPane.rightAnchor="125.0">

        <!-- Title -->
        <Label text="Register" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Name Label and TextField -->
        <VBox spacing="5.0">
            <Label text="Name:" style="-fx-font-size: 14px;" />
            <TextField promptText="Enter your name" prefHeight="40.0"/>
        </VBox>

        <!-- Email Label and TextField -->
        <VBox spacing="5.0">
            <Label text="Email:" style="-fx-font-size: 14px;" />
            <TextField promptText="Enter your email" prefHeight="40.0"/>
        </VBox>

        <!-- Password Label and PasswordField -->
        <VBox spacing="5.0">
            <Label text="Password:" style="-fx-font-size: 14px;" />
            <PasswordField promptText="Enter password" prefHeight="40.0"/>
        </VBox>

        <!-- Buttons -->
        <Button text="Submit"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                prefHeight="40.0"/>

        <Button text="Back to Home"
                fx:id="backButton"
                style="-fx-font-size: 14px; -fx-background-color: #ccc;"
                prefHeight="40.0"
                onAction="#goToHome"/>

    </VBox>

</AnchorPane>
