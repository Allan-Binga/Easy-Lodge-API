<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotel_management.client.controllers.HomeController">

    <VBox alignment="CENTER" layoutX="150.0" layoutY="120.0" prefWidth="300.0" spacing="15.0">

        <!-- Welcome Message -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to Easy Lodge" />

        <!-- Instruction Text -->
        <Label style="-fx-font-size: 16px; -fx-text-fill: gray;" text="Your comfort is our priority." />

    </VBox>

     <!-- Buttons Section -->
     <VBox alignment="CENTER" layoutX="223.0" layoutY="209.0" spacing="15.0">

         <Button fx:id="registerButton" onAction="#goToRegister" style="-fx-font-size: 18px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Register" />
         <Button fx:id="loginButton"  style="-fx-font-size: 18px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="Login" />
     </VBox>

</AnchorPane>
